<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#BDB8B8"
    tools:context=".ui.others.OthersFragment">


    <ImageView
        android:id="@+id/tea_pluck_img"
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:foregroundGravity="center"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/pin_yellow"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/others_measure_edtx"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:fontFamily="@font/mono"
        android:hint="Describe e.g bought a plot"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/others_expenses_cost_edtx"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:fontFamily="@font/mono"
        android:hint="Total Cost"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/others_measure_edtx"
        app:layout_constraintStart_toStartOf="@+id/others_measure_edtx"
        app:layout_constraintTop_toBottomOf="@+id/others_measure_edtx" />

    <Button
        android:id="@+id/save_others_expns_btn"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/mono"
        android:text="Save"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/others_expenses_cost_edtx"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/others_expenses_cost_edtx"
        app:layout_constraintTop_toTopOf="@+id/others_expenses_cost_edtx" />

</androidx.constraintlayout.widget.ConstraintLayout>