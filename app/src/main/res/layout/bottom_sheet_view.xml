<?xml version="1.0" encoding="utf-8"?>




<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    style="ShapeAppearance.AgroBizna.LargeComponent"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/firstButton"
        android:text="PLUCKING RECORDS"
        android:layout_marginTop="10dp"
        style="@style/BottomSheetItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/secondButton"
        style="@style/BottomSheetItem"
        android:text="WEEDING RECORDS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstButton" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/thirdButton"
        style="@style/BottomSheetItem"
        android:text="TEA RELATED EXPENDITURE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondButton" />

</androidx.constraintlayout.widget.ConstraintLayout>